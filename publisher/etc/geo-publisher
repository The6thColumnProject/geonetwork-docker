install_dir=${install_dir:-"/usr/local"}

install() {
    #docker pull the6thcolumnproject/geo-publisher
    local scripts=(nc2es nc2geonetwork nc2json query run)
    for script in ${scripts[@]} ; do
        echo "installing ${script} "
        mkdir -p ${install_dir}/bin 
        curl --progress-bar -o ${install_dir}/bin/${script} https://raw.githubusercontent.com/estani/geonetwork-docker/master/publisher/bin/${script}
        chmod 755 ${install_dir}/bin/${script}
    done
    echo "install completed"
}

install
exit $?

